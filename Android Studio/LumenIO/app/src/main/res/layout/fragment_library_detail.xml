<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.fragment.LibraryDetailFragment" >

    <data>
        <variable name="libraryViewModel" type="it.davidepalladino.lumenio.view.viewModel.LibraryViewModel" />
        <variable name="libraryDetailFragment" type="it.davidepalladino.lumenio.view.fragment.LibraryDetailFragment" />
        <import type="android.graphics.Color" />
        <import type="java.util.Date" />
        <import type="java.text.SimpleDateFormat" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/cardMarginTop"
                    android:layout_marginHorizontal="@dimen/cardMarginHorizontal"
                    app:cardCornerRadius="@dimen/cardCornerRadius" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:padding="@dimen/headerCardPadding"
                            android:layout_marginTop="@dimen/headerCardMarginTop"
                            android:layout_marginStart="@dimen/headerCardMarginStart" >

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_round_preview_card"
                                android:layout_marginEnd="@dimen/iconHeaderCardMarginEnd" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:textStyle="bold"
                                android:textSize="@dimen/textHeaderCardSize"
                                android:textColor="@color/primaryColor"
                                android:text="@string/preview" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="@dimen/bodyCardPadding" >

                            <View
                                android:layout_width="125dp"
                                android:layout_height="125dp"
                                android:background="@{Color.argb(libraryViewModel.selectedBrightness, libraryViewModel.selectedRed, libraryViewModel.selectedGreen, libraryViewModel.selectedBlue)}"
                                android:backgroundTint="#000000"
                                android:backgroundTintMode="add"
                                android:layout_marginTop="5dp"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:layout_marginBottom="10dp"
                                android:elevation="5dp"
                                tools:background="#FFFFFF"/>

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="125dp"
                                android:orientation="vertical"
                                android:layout_marginTop="5dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="5dp"
                                android:layout_marginBottom="10dp" >

                                <EditText
                                    android:id="@+id/name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@android:color/transparent"
                                    android:clickable="false"
                                    android:cursorVisible="false"
                                    android:focusable="false"
                                    android:inputType="text"
                                    android:maxLength="20"
                                    android:maxLines="1"
                                    android:text="@={libraryViewModel.selectedName}"
                                    android:visibility="visible"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    tools:text="Name" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom"
                                    android:orientation="horizontal"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="3dp"
                                        android:layout_marginEnd="15dp"
                                        android:gravity="start"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/brightnessShort" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/red" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/green" />


                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/blue" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text='@{String.format("%03d", libraryViewModel.selectedBrightness)}'
                                            tools:text="0" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text='@{String.format("%03d", libraryViewModel.selectedRed)}'
                                            tools:text="0" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text='@{String.format("%03d", libraryViewModel.selectedGreen)}'
                                            tools:text="0" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text='@{String.format("%03d", libraryViewModel.selectedBlue)}'
                                            tools:text="0" />
                                    </LinearLayout>
                                </LinearLayout>
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/cardMarginTop"
                    android:layout_marginHorizontal="@dimen/cardMarginHorizontal"
                    android:layout_marginBottom="@dimen/cardMarginBottom"
                    app:cardCornerRadius="@dimen/cardCornerRadius"
                    android:visibility="visible" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:padding="@dimen/headerCardPadding"
                            android:layout_marginTop="@dimen/headerCardMarginTop"
                            android:layout_marginStart="@dimen/headerCardMarginStart" >

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_round_control_card"
                                android:layout_marginEnd="@dimen/iconHeaderCardMarginEnd" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:textStyle="bold"
                                android:textSize="@dimen/textHeaderCardSize"
                                android:textColor="@color/primaryColor"
                                android:text="@string/controls" />
                        </LinearLayout>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="@dimen/bodyCardPadding" >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_column="0"
                                android:layout_weight="6"
                                android:gravity="end"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginVertical="5dp"
                                    android:text="@string/brightnessShort" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginVertical="5dp"
                                    android:text="@string/red" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginVertical="5dp"
                                    android:text="@string/green" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginVertical="5dp"
                                    android:text="@string/blue" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_column="1"
                                android:layout_weight="1"
                                android:gravity="start"
                                android:orientation="vertical">

                                <SeekBar
                                    android:id="@+id/seekBarBrightness"
                                    android:layout_width="match_parent"
                                    android:layout_height="19dp"
                                    android:layout_marginVertical="5dp"
                                    android:max="255"
                                    android:onProgressChanged="@{() -> libraryDetailFragment.updateDevice()}"
                                    android:progress="@={libraryViewModel.selectedBrightness}" />

                                <SeekBar
                                    android:id="@+id/seekBarRed"
                                    android:layout_width="match_parent"
                                    android:layout_height="19dp"
                                    android:layout_marginVertical="5dp"
                                    android:max="255"
                                    android:onProgressChanged="@{() -> libraryDetailFragment.updateDevice()}"
                                    android:progress="@={libraryViewModel.selectedRed}" />

                                <SeekBar
                                    android:id="@+id/seekBarGreen"
                                    android:layout_width="match_parent"
                                    android:layout_height="19dp"
                                    android:layout_marginVertical="5dp"
                                    android:max="255"
                                    android:onProgressChanged="@{() -> libraryDetailFragment.updateDevice()}"
                                    android:progress="@={libraryViewModel.selectedGreen}" />

                                <SeekBar
                                    android:id="@+id/seekBarBlue"
                                    android:layout_width="match_parent"
                                    android:layout_height="19dp"
                                    android:layout_marginVertical="5dp"
                                    android:max="255"
                                    android:onProgressChanged="@{() -> libraryDetailFragment.updateDevice()}"
                                    android:progress="@={libraryViewModel.selectedBlue}" />
                            </LinearLayout>
                        </TableRow>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/cardMarginTop"
                    android:layout_marginHorizontal="@dimen/cardMarginHorizontal"
                    android:layout_marginBottom="@dimen/cardMarginBottom"
                    app:cardCornerRadius="@dimen/cardCornerRadius"
                    android:visibility="visible" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:padding="@dimen/headerCardPadding"
                            android:layout_marginTop="@dimen/headerCardMarginTop"
                            android:layout_marginStart="@dimen/headerCardMarginStart" >

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_round_date_card"
                                android:layout_marginEnd="@dimen/iconHeaderCardMarginEnd" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:textStyle="bold"
                                android:textSize="@dimen/textHeaderCardSize"
                                android:textColor="@color/primaryColor"
                                android:text="Date" />
                        </LinearLayout>

                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:padding="@dimen/bodyCardPadding" >

                            <TableRow>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    android:text="Created at"
                                    android:textAllCaps="true"
                                    android:layout_column="0"
                                    android:layout_weight="1"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@{libraryViewModel.selectedCreatedAt}"
                                    android:textAlignment="textEnd"
                                    android:layout_column="1"
                                    android:layout_weight="1"
                                    tools:text="2022/06/12 11:30:00" />
                            </TableRow>

                            <TableRow>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    android:text="Updated at"
                                    android:textAllCaps="true"
                                    android:layout_column="0"
                                    android:layout_weight="1"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@{libraryViewModel.selectedUpdatedAt}"
                                    android:textAlignment="textEnd"
                                    android:layout_column="1"
                                    android:layout_weight="1"
                                    tools:text="2022/06/12 11:30:00" />
                            </TableRow>

                            <TableRow>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    android:text="Used at"
                                    android:textAllCaps="true"
                                    android:layout_column="0"
                                    android:layout_weight="1"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@{libraryViewModel.selectedUsedAt}"
                                    android:textAlignment="textEnd"
                                    android:layout_column="1"
                                    android:layout_weight="1"
                                    tools:text="2022/06/12 11:30:00" />
                            </TableRow>
                        </TableLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>
</layout>
