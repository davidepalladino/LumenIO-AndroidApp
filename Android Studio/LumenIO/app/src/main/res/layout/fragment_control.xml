<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" >

    <data>
        <variable name="profile" type="it.davidepalladino.lumenio.data.ProfileViewModel" />
        <import type="android.graphics.Color" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ControlFragment">

        <View
            android:id="@+id/viewColor"
            android:layout_width="330dp"
            android:layout_height="24dp"
            android:background="@{Color.argb(profile.brightness, profile.red, profile.green, profile.blue)}"
            android:backgroundTint="#000000"
            android:backgroundTintMode="add"
            android:layout_marginTop="50dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayoutValues"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TableRow
            android:id="@+id/linearLayoutValues"
            android:layout_width="330dp"
            android:layout_height="24dp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewColor"
            app:layout_constraintBottom_toTopOf="@id/linearLayoutBrightness" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{String.valueOf(profile.brightness)}"
                    android:layout_column="0"
                    android:layout_weight="1"
                    android:gravity="center"
                    tools:text="0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{String.valueOf(profile.red)}"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:gravity="center"
                    tools:text="0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{String.valueOf(profile.green)}"
                    android:layout_column="2"
                    android:layout_weight="1"
                    android:gravity="center"
                    tools:text="0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{String.valueOf(profile.blue)}"
                    android:layout_column="3"
                    android:layout_weight="1"
                    android:gravity="center"
                    tools:text="0" />
        </TableRow>

        <!-- BRIGHTNESS -->
        <LinearLayout
            android:id="@+id/linearLayoutBrightness"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="50dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/linearLayoutValues" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="BRGT" />

            <SeekBar
                android:id="@+id/seekBarBrightness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="255"
                android:progress="@{profile.brightness}"
                android:onProgressChanged="@{(seekbar, progress, fromUser) -> profile.setBrightness(progress)}"/>
        </LinearLayout>

        <!-- RED -->
        <LinearLayout
            android:id="@+id/linearLayoutRed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayoutBrightness">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RED" />

            <SeekBar
                android:id="@+id/seekBarRed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="255"
                android:progress="@{profile.red}"
                android:onProgressChanged="@{(seekbar, progress, fromUser) -> profile.setRed(progress)}"/>
        </LinearLayout>

        <!-- GREEN -->
        <LinearLayout
            android:id="@+id/linearLayoutGreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayoutRed">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GREEN" />

            <SeekBar
                android:id="@+id/seekBarGreen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="255"
                android:progress="@{profile.green}"
                android:onProgressChanged="@{(seekbar, progress, fromUser) -> profile.setGreen(progress)}"/>
        </LinearLayout>

        <!-- BLUE -->
        <LinearLayout
            android:id="@+id/linearLayoutBlue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayoutGreen">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BLUE" />

            <SeekBar
                android:id="@+id/seekBarBlue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="255"
                android:progress="@{profile.blue}"
                android:onProgressChanged="@{(seekbar, progress, fromUser) -> profile.setBlue(progress)}"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
